                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="captain@hydra Pvt Ltd"
                android:layout_toRightOf="@id/img_captain_america"
                android:layout_below="@id/txt_captain_americaname"
                android:layout_marginTop="18dp"
                android:textStyle="italic"
                android:textSize="18sp"
                />

        </RelativeLayout>
    </LinearLayout>

</ScrollView>