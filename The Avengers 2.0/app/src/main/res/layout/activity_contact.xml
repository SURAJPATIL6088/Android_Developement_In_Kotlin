                android:textSize="18sp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_black_panther"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="23sp"
