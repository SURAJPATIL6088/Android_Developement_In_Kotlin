<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_tony"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="23sp"
                android:src="@drawable/tony_stark_new" />

            <TextView
                android:id="@+id/txt_tonyname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tony Stark"
                android:layout_toRightOf="@id/img_tony"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txt_tonynumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 6088 3941"
                android:layout_toRightOf="@id/img_tony"
                android:layout_below="@id/txt_tonyemail"
                android:layout_marginTop="18dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_tonyemail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="stark@Industries Pvt Ltd"
                android:layout_toRightOf="@id/img_tony"
                android:layout_below="@id/txt_tonyname"
                android:layout_marginTop="18dp"
                android:textStyle="italic"
                android:textSize="18sp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
