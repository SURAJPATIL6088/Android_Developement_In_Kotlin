                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_margin="23sp"
                android:src="@drawable/thor" />

            <TextView
                android:id="@+id/txt_thorname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thor"
                android:layout_toRightOf="@id/img_thor"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:textSize="25sp"/>

            <TextView
                android:id="@+id/txt_thornumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+91 2723 9253"
                android:layout_toRightOf="@id/img_thor"
                android:layout_below="@id/txt_thoremail"
                android:layout_marginTop="18dp"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/txt_thoremail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="thor@thunder Pvt Ltd"
                android:layout_toRightOf="@id/img_thor"
                android:layout_below="@id/txt_thorname"
                android:layout_marginTop="18dp"
                android:textStyle="italic"
                android:textSize="18sp"
                />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_hulk"
